{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@squoolr/api-services": ["libs/api-services/src/index.ts"],
      "@squoolr/auth": ["libs/authentication/src/index.ts"],
      "@squoolr/axios": ["libs/axios/src/index.ts"],
      "@squoolr/constants": ["libs/constants/src/index.ts"],
      "@squoolr/dialogTransition": ["libs/dialog-transition/src/index.ts"],
      "@squoolr/encrypter": ["libs/encrypter/src/index.ts"],
      "@squoolr/interfaces": ["libs/interfaces/src/index.ts"],
      "@squoolr/layout": ["libs/layout/src/index.ts"],
      "@squoolr/mailer": ["libs/mailer/src/index.ts"],
      "@squoolr/tasks": ["libs/tasks/src/index.ts"],
      "@squoolr/theme": ["libs/theme/src/index.ts"],
      "@squoolr/toast": ["libs/toast/src/index.ts"],
      "@squoolr/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
